# 使用官方 Miniconda 镜像
FROM jupyter/scipy-notebook:latest

# 设置工作目录
WORKDIR /app


# 复制环境文件到容器中
COPY CoreCodeBench-main/environments/haystack.yml /app/haystack.yml

# 创建 Conda 环境并安装依赖
RUN conda env create -f /app/haystack.yml && \
    conda clean --all -f -y

# 使用 Conda 环境
SHELL ["conda", "run", "-n", "haystack", "/bin/bash", "-c"]

# 默认启动时进入交互式 shell
CMD ["conda", "run", "-n", "haystack", "bash"]
